  body
    
    // NAVBAR
    
    div.navbar.navbar-fixed-top.navbar-inverse
        div.navbar-inner
            div.container-fluid
                button.btn.btn-navbar(type="button", data-toggle="collapse", data-target=".nav-collapse")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a#brand.brand(href="/") jarvism
                ul.nav
                    li.dropdown
                        a(href="#", class="dropdown-toggle", data-toggle="dropdown") 
                            strong.caret
                        ul.dropdown-menu
                            li.nav-header quick links
                            li
                                a(href="/fitness") fitness
                            li
                                a(href="/computing") computing
                            li
                                a(href="/music") music
                            li.divider
                            li.nav-header info
                            li
                                a(href="#aboutModal", id="about", data-toggle="modal") about
                            li
                                a(href="#contactModal", id="contact", data-toggle="modal") contact
                    li.divider-vertical
                    li
                        a(href="/portfolio") portfolio
                    
                // SIGN UP/IN will collapse
                div.nav-collapse.collapse
                    ul.nav.pull-right
                        li 
                            a(href="#") Sign Up
                        li.divider-vertical
                        li.dropdown
                            a(href="#", class="dropdown-toggle", data-toggle="dropdown") Sign In 
                                strong.caret
                            div.dropdown-menu(style="padding: 15px; padding-bottom: 0px;")
                                form.form-signin
                                    h2.form-signin-heading Please sign in
                                    input.input-block-level(type="text", name="username", placeholder="ID")
                                    input.input-block-level(type="password", name="password", placeholder="Password")
                                    label.checkbox Remember me
                                        input(type="checkbox", value="remember-me") 
                                    button.btn.btn-large.btn-primary(type="submit") Sign in
                                    hr

    // Modals
    #aboutModal.modal.hide.fade
        .modal-header
            button(type="button",class="close",data-dismiss="modal",aria-hidden="true") &times;
            h3 About Me
        .modal-body
            #aboutTXT
            p Hello, and welcome to my site! I'd like to thank you for visiting. My name is Jarvis, and I'm a web designer and developer. I really love the mix of creativity and technical know-how it takes to make a great web experience.  I hope you enjoy your visit!
        .modal-footer
            button(class="btn", data-dismiss="modal") Close

    #contactModal.modal.hide.fade
        .modal-header
            button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
            h3 Contact Me
        .modal-body
            #info
                #infoLeft
                    p email:
                    p skype:
                    p google:
                #infoRight
                    p
                        a(href="mailto:jarvis@jarvism.comyr.com?Subject=From%20Contact%20@jarvism.comyr.com") jarvis@jarvism.comyr.com
                    p jarvis.martin
                    p jarvis.martin
        .modal-footer
            button(class="btn", data-dismiss="modal") Close